<UserControl x:Class="Amalyot.UIController.CategoryUi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Amalyot.UIController"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="120">
    <Button x:Name="battonCategory" Background="Transparent" BorderBrush="Transparent">
        <Border x:Name="categoryBorder" CornerRadius="5" 
    Background="#FEFEFE" Height="30" Margin="5 0 5 0">
            <StackPanel Orientation="Horizontal">
                <Path Data="{DynamicResource due-timer}"
          Fill="{DynamicResource GroupBorderColor}"
          VerticalAlignment="Center"/>
                <Label x:Name="LbCategory" HorizontalAlignment="Center" 
           VerticalAlignment="Center" Content="Signature" Foreground="#464646"
           Margin="0 2 0 0"
           FontFamily="Bahnschrift SemiBold"/>
            </StackPanel>
        </Border>
    </Button>
</UserControl>
